<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.UpdateAdopterController"
            prefHeight="300.0" prefWidth="400.0">

    <top>
        <Label text="Update Adopter" style="-fx-font-size: 18px; -fx-font-weight: bold;" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </Label>
    </top>

    <center>
        <GridPane hgap="10.0" vgap="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
            <Label fx:id="idLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
            <TextField fx:id="nameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Contact Info:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
            <TextField fx:id="contactTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;"/>
            <TextField fx:id="addressTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <Button text="Save" onAction="#handleSave" style="-fx-font-size: 14px; -fx-padding: 8 15;"/>
            <Button text="Cancel" onAction="#handleCancel" style="-fx-font-size: 14px; -fx-padding: 8 15;"/>
        </HBox>
    </bottom>

</BorderPane>
