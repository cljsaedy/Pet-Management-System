<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefWidth="450.0" spacing="15.0" style="-fx-background-color: #f4f4f4; -fx-border-color: #cccccc; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-background-radius: 5px;" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AddAnimalController">
   <padding>
      <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
   </padding>
   <children>
      <Label text="Add New Animal Profile" textFill="#333333">
         <font>
            <Font name="Arial Bold" size="22.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>
      <GridPane hgap="10.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="100.0" prefWidth="120.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <children>
            <Label text="Name:" textFill="#444444" GridPane.columnIndex="0" GridPane.rowIndex="0">
               <font><Font size="13.0" /></font>
            </Label>
            <TextField fx:id="nameField" promptText="Enter animal's name" style="-fx-font-size: 13px; -fx-padding: 5px; -fx-border-color: #aeaeae; -fx-border-radius: 3px;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Species:" textFill="#444444" GridPane.columnIndex="0" GridPane.rowIndex="1">
               <font><Font size="13.0" /></font>
            </Label>
            <TextField fx:id="speciesField" promptText="e.g., Dog, Cat" style="-fx-font-size: 13px; -fx-padding: 5px; -fx-border-color: #aeaeae; -fx-border-radius: 3px;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Breed:" textFill="#444444" GridPane.columnIndex="0" GridPane.rowIndex="2">
               <font><Font size="13.0" /></font>
            </Label>
            <TextField fx:id="breedField" promptText="e.g., Labrador, Siamese" style="-fx-font-size: 13px; -fx-padding: 5px; -fx-border-color: #aeaeae; -fx-border-radius: 3px;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Age (Years):" textFill="#444444" GridPane.columnIndex="0" GridPane.rowIndex="3">
               <font><Font size="13.0" /></font>
            </Label>
            <TextField fx:id="ageField" promptText="Enter age in years" style="-fx-font-size: 13px; -fx-padding: 5px; -fx-border-color: #aeaeae; -fx-border-radius: 3px;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Gender:" textFill="#444444" GridPane.columnIndex="0" GridPane.rowIndex="4">
               <font><Font size="13.0" /></font>
            </Label>
            <ComboBox fx:id="genderComboBox" promptText="Select gender" style="-fx-font-size: 13px; -fx-padding: 4px; -fx-border-color: #aeaeae; -fx-border-radius: 3px;" GridPane.columnIndex="1" GridPane.rowIndex="4">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <String fx:value="Male"/>
                     <String fx:value="Female"/>
                     <String fx:value="Unknown"/>
                  </FXCollections>
               </items>
            </ComboBox>

            <Label text="Health Status:" textFill="#444444" GridPane.columnIndex="0" GridPane.rowIndex="5">
               <font><Font size="13.0" /></font>
            </Label>
            <TextField fx:id="healthField" promptText="e.g., Healthy, Vaccinated" style="-fx-font-size: 13px; -fx-padding: 5px; -fx-border-color: #aeaeae; -fx-border-radius: 3px;" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <Label text="Description:" alignment="TOP_LEFT" textFill="#444444" GridPane.columnIndex="0" GridPane.rowIndex="6">
               <font><Font size="13.0" /></font>
               <GridPane.margin><Insets top="5.0" /></GridPane.margin>
            </Label>
            <TextArea fx:id="descriptionField" prefHeight="100.0" promptText="Enter detailed description, temperament, history, etc." wrapText="true" style="-fx-font-size: 13px; -fx-padding: 5px; -fx-border-color: #aeaeae; -fx-border-radius: 3px;" GridPane.columnIndex="1" GridPane.rowIndex="6" />
         </children>
      </GridPane>
      <HBox alignment="CENTER_RIGHT" spacing="15.0">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
         <children>
            <Button fx:id="saveButton" onAction="#handleSaveAnimal" text="Save Animal" defaultButton="true" minHeight="38.0" prefWidth="120.0" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 3px;" />
            <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel" cancelButton="true" minHeight="38.0" prefWidth="100.0" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 3px;" />
         </children>
      </HBox>
   </children>
</VBox>
