<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?> <!-- Added for button layout -->
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.ColumnConstraints?> <!-- Explicit import -->
<?import javafx.scene.layout.RowConstraints?> <!-- Explicit import -->

<VBox prefHeight="300.0" prefWidth="400.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.RecordAdoptionController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Record New Adoption">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" /> <!-- Adjusted width for label -->
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="230.0" /> <!-- Adjusted width for control -->
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" /> <!-- Increased height for buttons -->
        </rowConstraints>
        <Label text="Select Animal:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <ComboBox fx:id="animalComboBox" prefWidth="230.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Select Adopter:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <ComboBox fx:id="adopterComboBox" prefWidth="230.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Adoption Date:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <DatePicker fx:id="adoptionDatePicker" prefWidth="230.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <!-- HBox to hold both buttons and align them to the right of the cell -->
        <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <children>
                <Button fx:id="recordAdoptionButton" mnemonicParsing="false" onAction="#handleRecordAdoption" text="Record Adoption" />
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" /> <!-- Added Cancel Button -->
            </children>
        </HBox>
    </GridPane>
</VBox>