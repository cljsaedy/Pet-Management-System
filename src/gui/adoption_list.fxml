<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AdoptionListController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Adoption History" />
      <TableView fx:id="adoptionTableView" prefHeight="300.0" prefWidth="560.0">
         <columns>
            <TableColumn fx:id="adoptionIdColumn" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="animalNameColumn" prefWidth="120.0" text="Animal Name" />
            <TableColumn fx:id="adopterNameColumn" prefWidth="150.0" text="Adopter Name" />
            <TableColumn fx:id="adoptionDateColumn" prefWidth="120.0" text="Adoption Date" />
            <TableColumn fx:id="viewDetailsColumn" prefWidth="100.0" text="Actions" />
         </columns>
      </TableView>
   </children>
</VBox>