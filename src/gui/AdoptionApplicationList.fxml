<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="950.0" style="-fx-background-color: #f9f9f9;" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AdoptionApplicationListController">
    <top>
        <VBox alignment="CENTER_LEFT" style="-fx-background-color: #e67e22; -fx-padding: 15px 25px;" BorderPane.alignment="CENTER">
             <children>
                <Label fx:id="titleLabel" text="Pending Adoption Applications" textFill="white">
                    <font>
                        <Font name="Arial Bold" size="22.0" />
                    </font>
                </Label>
                <Label text="Review and process submitted applications" textFill="#ecf0f1">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </Label>
            </children>
        </VBox>
    </top>
    <center>
        <VBox spacing="15.0" style="-fx-padding: 20px;" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="applicationsTableView" VBox.vgrow="ALWAYS" style="-fx-selection-bar: #FAD7A0; -fx-selection-bar-non-focused: #FDEBD0; -fx-border-color: #d0d0d0; -fx-border-radius: 3px;">
                    <columns>
                        <TableColumn fx:id="animalNameColumn" prefWidth="120.0" text="Animal Name" />
                        <TableColumn fx:id="applicantNameColumn" prefWidth="150.0" text="Applicant Name" />
                        <TableColumn fx:id="applicationDateColumn" prefWidth="160.0" text="Application Date" />
                        <TableColumn fx:id="reasonColumn" prefWidth="200.0" text="Reason for Adoption" />
                        <TableColumn fx:id="hasPetsColumn" prefWidth="80.0" style="-fx-alignment: CENTER;" text="Has Pets?" />
                        <TableColumn fx:id="livingSituationColumn" prefWidth="130.0" text="Living Situation" />
                        <TableColumn fx:id="contactPreferenceColumn" prefWidth="130.0" text="Contact Preference" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>
     <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7 transparent transparent transparent; -fx-border-width: 1px; -fx-padding: 15px 25px;">
            <Label text="Double-click an application to review and process." textFill="#555555">
                 <font><Font size="13.0" /></font>
            </Label>
        </HBox>
    </bottom>
</BorderPane>