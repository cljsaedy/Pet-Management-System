<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="450.0" prefWidth="400.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AdoptionApplicationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Adoption Application">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="230.0" />
        </columnConstraints>

        <Label text="Reason for Adoption:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextArea fx:id="reasonTextArea" prefHeight="80.0" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Do you have other pets?" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <RadioButton fx:id="yesPetsRadio" text="Yes">
                <toggleGroup>
                    <ToggleGroup fx:id="hasPetsGroup" />
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="noPetsRadio" text="No" toggleGroup="$hasPetsGroup" />
        </HBox>

        <Label text="Living Situation:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <ComboBox fx:id="livingSituationCombo" prefWidth="230.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Apartment"/>
                    <String fx:value="House with Yard"/>
                    <String fx:value="House without Yard"/>
                    <String fx:value="Other"/>
                </FXCollections>
            </items>
        </ComboBox>

        <Label text="Contact Preference:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <ComboBox fx:id="contactPreferenceCombo" prefWidth="230.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Email"/>
                    <String fx:value="Phone"/>
                </FXCollections>
            </items>
        </ComboBox>
    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10.0" style="margin-top: 20px;">
        <Button fx:id="submitButton" mnemonicParsing="false" onAction="#handleSubmitApplication" text="Submit Application" />
        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
    </HBox>
</VBox>
