<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f9f9f9;" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AdopterListController">
    <top>
        <VBox alignment="CENTER_LEFT" style="-fx-background-color: #3498db; -fx-padding: 15px 25px;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Adopter Management" textFill="white">
                    <font>
                        <Font name="Arial Bold" size="22.0" />
                    </font>
                </Label>
                <Label text="List of all registered adopters and applicants" textFill="#ecf0f1">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </Label>
            </children>
        </VBox>
    </top>
    <center>
        <VBox spacing="15.0" style="-fx-padding: 20px;" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="adopterTableView" VBox.vgrow="ALWAYS" style="-fx-selection-bar: #AED6F1; -fx-selection-bar-non-focused: #D6EAF8; -fx-border-color: #d0d0d0; -fx-border-radius: 3px;">
                    <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="180.0" text="Name" />
                        <TableColumn fx:id="contactColumn" prefWidth="150.0" text="Contact Info" />
                        <TableColumn fx:id="addressColumn" prefWidth="250.0" text="Address" />
                        <TableColumn fx:id="adoptedAnimalColumn" prefWidth="180.0" text="Adopted Animal" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7 transparent transparent transparent; -fx-border-width: 1px; -fx-padding: 15px 25px;">
            <Label text="Double-click an adopter to view details or process adoption." textFill="#555555">
                 <font><Font size="13.0" /></font>
            </Label>
        </HBox>
    </bottom>
</BorderPane>