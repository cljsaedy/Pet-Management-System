<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- Ensure your JavaFX version (e.g., 24) is correct in the xmlns attribute -->
<BorderPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MainSceneController">
    <top>
        <VBox alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-padding: 20px 30px;" BorderPane.alignment="CENTER">
            <children>
                <Label text="FurEver Care - Admin Dashboard" textFill="white">
                    <font>
                        <Font name="Arial Bold" size="24.0" />
                    </font>
                </Label>
                <Label fx:id="welcomeLabel" text="Welcome, Admin!" textFill="#bdc3c7">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </Label>
            </children>
        </VBox>
    </top>
    <center>
        <VBox spacing="15.0" style="-fx-padding: 20px;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Animal Management" textFill="#2c3e50">
                     <font>
                        <Font name="Arial Bold" size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>
                <TableView fx:id="animalTableView" VBox.vgrow="ALWAYS" style="-fx-selection-bar: #AED6F1; -fx-selection-bar-non-focused: #D6EAF8; -fx-border-color: #d0d0d0; -fx-border-radius: 3px;">
                    <columns>
                        <TableColumn fx:id="animalIdColumn" prefWidth="60.0" style="-fx-alignment: CENTER;" text="ID" />
                        <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name" />
                        <TableColumn fx:id="speciesColumn" prefWidth="100.0" text="Species" />
                        <TableColumn fx:id="breedColumn" prefWidth="180.0" text="Breed" />
                        <TableColumn fx:id="ageColumn" prefWidth="60.0" style="-fx-alignment: CENTER_RIGHT;" text="Age" />
                        <TableColumn fx:id="genderColumn" prefWidth="90.0" text="Gender" />
                        <TableColumn fx:id="adoptionStatusColumn" prefWidth="120.0" text="Adoption Status" />
                        <!-- If you want an action column back for quick edit/delete per row:
                        <TableColumn fx:id="actionColumn" prefWidth="150.0" text="Actions" />
                        -->
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #ffffff; -fx-border-color: #d0d0d0 transparent transparent transparent; -fx-border-width: 1px; -fx-padding: 15px 30px;" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="addAnimalButton" onAction="#handleAddAnimal" text="Add Animal" minHeight="35.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-background-radius: 3px;" />
                <Button fx:id="adopterListButton" onAction="#handleAdopterList" text="View Adopters" minHeight="35.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-background-radius: 3px;" />
                <Button fx:id="adoptionApplicationsButton" onAction="#handleAdoptionApplications" text="View Applications" minHeight="35.0" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-background-radius: 3px;" />
                <!-- Example for a "Record Adoption" button if you re-enable it
                <Button fx:id="recordAdoptionButton" onAction="#handleRecordAdoption" text="Record Adoption" minHeight="35.0" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-background-radius: 3px;" visible="true" managed="true"/>
                -->
                <HBox HBox.hgrow="ALWAYS" /> <!-- Spacer to push logout to the right -->
                <Button fx:id="logoutButton" onAction="#handleLogout" text="Logout" minHeight="35.0" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-background-radius: 3px;" />
            </children>
        </HBox>
    </bottom>
</BorderPane>