<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="450.0" prefWidth="500.0" style="-fx-background-color: #f9f9f9;" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ApproveAdoptionController">
    <top>
        <VBox alignment="CENTER" spacing="8.0" style="-fx-padding: 20px 25px 10px 25px;">
            <children>
                <Label text="Process Adoption Application" textFill="#2c3e50">
                    <font>
                        <Font name="Arial Bold" size="20.0" />
                    </font>
                </Label>
                <Label fx:id="adopterNameLabel" text="Applicant: [Name]" textFill="#555555">
                    <font><Font size="14.0" /></font>
                </Label>
                 <Label fx:id="animalNameDisplayLabel" text="Animal: [Name]" textFill="#555555">
                    <font><Font size="14.0" /></font>
                </Label>
            </children>
        </VBox>
    </top>
    <center>
        <VBox spacing="10.0" style="-fx-padding: 10px 25px 20px 25px;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Applicant's Reason for Adoption:" style="-fx-font-weight: bold;" textFill="#444444">
                    <font><Font size="13.0" /></font>
                </Label>
                <TextArea fx:id="reasonForAdoptionArea" prefHeight="150.0" wrapText="true" editable="false" style="-fx-font-size: 13px; -fx-background-color: #e9ecef; -fx-border-color: #ced4da; -fx-border-radius: 3px;">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </TextArea>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20.0" style="-fx-padding: 15px 25px 25px 25px; -fx-background-color: #f0f2f5; -fx-border-color: #d0d0d0 transparent transparent transparent; -fx-border-width: 1px;">
            <children>
                <Button onAction="#handleApprove" text="Approve Adoption" minHeight="38.0" prefWidth="150.0" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 3px;" />
                <Button onAction="#handleReject" text="Reject Application" minHeight="38.0" prefWidth="150.0" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 3px;" />
                <Button onAction="#handleCancel" text="Cancel" minHeight="38.0" prefWidth="100.0" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 3px;" cancelButton="true" />
            </children>
        </HBox>
    </bottom>
</BorderPane>